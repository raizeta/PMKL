{% extends 'LayoutBundle:BackEnd:index.html.twig' %}

{% block mainall %}
<section class='col-lg-12 connectedSortable'>
    <div class="box">
        <div class="box-header"><i class="fa fa-map-marker"></i>
            <h3 class="box-title">
                List  Fostypepengeluarans
            </h3>
        </div>
        <div class="box-body">
            <a data-toggle="modal" id="myModalTrigger" class="btn btn-success">
              <i class="fa fa-plus"></i>
            </a>
        </div>
        <div class="box-body table-responsive">
            {% if (fosTypepengeluarans|length != 0) %}
              {% set currentpage      = fosTypepengeluarans.currentPageNumber %}
              {% set itemperpage      = fosTypepengeluarans.getItemNumberPerPage %}
              {% set totalitem        = fosTypepengeluarans.getTotalItemCount %}
              {% set itemfirst        = fosTypepengeluarans.getPaginationData.firstItemNumber %}
              {% set itemlast         = fosTypepengeluarans.getPaginationData.lastItemNumber %}
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Namatype</th>
                        <th>Deskripsitype</th>
                        <th>Statusdisplay</th>
                        <th>Createat</th>
                        <th>Updateat</th>
                        <th colspan="3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                
                {% for fosTypepengeluaran in fosTypepengeluarans %}
                    <tr>
                        <td><a href="{{ path('fostypepengeluaran_show', { 'id': fosTypepengeluaran.id }) }}">{{ fosTypepengeluaran.id }}</a></td>
                        <td>{{ fosTypepengeluaran.namaType }}</td>
                        <td>{{ fosTypepengeluaran.deskripsiType }}</td>
                        <td>{% if fosTypepengeluaran.statusDisplay %}Yes{% else %}No{% endif %}</td>
                        <td>{% if fosTypepengeluaran.createAt %}{{ fosTypepengeluaran.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if fosTypepengeluaran.updateAt %}{{ fosTypepengeluaran.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>                        <td align="center">
                            <i class="fa fa-eye fa-2x"></i>
                        </td>
                        <td align="center">
                            <a  href="javascript:;" data-id="{{fosTypepengeluaran.id}}" class="editButton">
                                <i class="fa fa-refresh fa-2x"></i>
                            </a>
                        </td>
                        <td align="center">
                            <i class="fa fa-trash-o fa-2x"></i>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            {% endif %}
            
        </div>
        <div class="box-footer clearfix">
          {% if (fosTypepengeluarans|length != 0) %}
            <ul class="pagination pagination-sm no-margin pull-left">
              Show Item  {{itemfirst}}-{{itemlast}} From {{totalitem}}
            </ul>
            {{ knp_pagination_render(fosTypepengeluarans) }}
          {% endif %}
        </div>
    </div>
</section>
<div id="myModalcreate" class="modal fade" role="dialog">
    {{form_start(form, {'attr': {'id': 'newFosTypepengeluaran'}})}}
        <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header bg-light-blue">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">New FosTypepengeluaran</h4>
              </div>
              <div class="modal-body">
                {% for formx in form %}
                <div class="form-group">
                    {{form_widget(formx)}}
                </div>
                {% endfor %}
              </div>
              <div class="modal-footer bg-light-blue">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success">Save</button>
              </div>
            </div>
        </div>
    {{form_end(form)}}
</div>
<div id="myModaledit" class="modal fade" role="dialog">
  
</div>
{% endblock mainall %}

{% block javascripts %}
    {{parent()}}
    <script>
      $('#myModalcreate').on('hidden.bs.modal', function () 
      {
          $(this).find('#newFosTypepengeluaran').trigger('reset');
      });

      $('#myModalTrigger').click(function()
      {
          var options = {keyboard:true, backdrop:true, show:true};
          $('#myModalcreate').modal(options);
      });
    </script>
    <script>
      $('#myModaledit').on('hidden.bs.modal', function () 
      {
          $(this).find('#editFosTypepengeluaran').trigger('reset');
      });

      $('.editButton').on('click', function() 
      {
        $('#myModaledit').html('');
        var options = {keyboard:false, backdrop:true, show:true};
        $('#myModaledit').modal(options);

        var id = $(this).attr('data-id');
        var $url =  Routing.generate('fostypepengeluaran_edit',{id:id});
        console.log($url);
        $.ajax
        ({
            url: $url,
            method: 'GET'
        })
        .success(function(response) 
        {
          $('#myModaledit').html(response);
          var options = {keyboard:true, backdrop:true, show:true};
          $('#myModaledit').modal(options);
        });
      });
    </script>
{% endblock javascripts %}
