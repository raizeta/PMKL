{% extends 'LayoutBundle:BackEnd:index.html.twig' %}

{% block mainall %}
<section class='col-lg-12 connectedSortable'>
    <div class="box">
        <div class="box-header"><i class="fa fa-map-marker"></i>
            <h3 class="box-title">
                Logo PMKL
            </h3>
        </div>
        <div class="box-body">
            <a data-toggle="modal" id="myModalTrigger" class="btn btn-success">
              <i class="fa fa-plus"></i>
            </a>
        </div>
        <div class="box-body table-responsive">
            {% if (fosLogoorgs|length != 0) %}
              {% set currentpage      = fosLogoorgs.currentPageNumber %}
              {% set itemperpage      = fosLogoorgs.getItemNumberPerPage %}
              {% set totalitem        = fosLogoorgs.getTotalItemCount %}
              {% set itemfirst        = fosLogoorgs.getPaginationData.firstItemNumber %}
              {% set itemlast         = fosLogoorgs.getPaginationData.lastItemNumber %}
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Namalogo</th>
                        <th>Deskripsilogo</th>
                        <th>Logo</th>
                        <th>Setlogodefault</th>
                        <th colspan="3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                
                {% for fosLogoorg in fosLogoorgs %}
                    <tr {% if loop.index is odd %}class="success"{% endif %}>
                        <td>{{loop.index + ( (currentpage -1) * itemperpage ) }}</td>
                        <td>{{ fosLogoorg.namaLogo }}</td>
                        <td>{{ fosLogoorg.deskripsiLogo }}</td>
                        <td>
                          {% if fosLogoorg.imageName %}
                            <img src="{{('adminlte/logoorg_pic/'~ fosLogoorg.imageName)| imagine_filter('anggota_thumb')}}" alt="">
                          {% endif %}
                        </td>
                        <td>{% if fosLogoorg.setlogoDefault %}Yes{% else %}No{% endif %}</td>                        <td align="center">
                            <i class="fa fa-eye fa-2x"></i>
                        </td>
                        <td align="center">
                            <a  href="javascript:;" data-id="{{fosLogoorg.id}}" class="editButton">
                                <i class="fa fa-refresh fa-2x"></i>
                            </a>
                        </td>
                        <td align="center">
                            <i class="fa fa-trash-o fa-2x"></i>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            {% endif %}
            
        </div>
        <div class="box-footer clearfix">
          {% if (fosLogoorgs|length != 0) %}
            <ul class="pagination pagination-sm no-margin pull-left">
              Show Item  {{itemfirst}}-{{itemlast}} From {{totalitem}}
            </ul>
            {{ knp_pagination_render(fosLogoorgs) }}
          {% endif %}
        </div>
    </div>
</section>
<div id="myModalcreate" class="modal fade" role="dialog">
    {{form_start(form, {'attr': {'id': 'newFosLogoorg'}})}}
        <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header bg-light-blue">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">New FosLogoorg</h4>
              </div>
              <div class="modal-body">
                {% for formx in form %}
                <div class="form-group">
                    {{form_widget(formx)}}
                </div>
                {% endfor %}
              </div>
              <div class="modal-footer bg-light-blue">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success">Save</button>
              </div>
            </div>
        </div>
    {{form_end(form)}}
</div>
<div id="myModaledit" class="modal fade" role="dialog">
  
</div>
{% endblock mainall %}

{% block javascripts %}
    {{parent()}}
    <script>
      $('#myModalcreate').on('hidden.bs.modal', function () 
      {
          $(this).find('#newFosLogoorg').trigger('reset');
      });

      $('#myModalTrigger').click(function()
      {
          var options = {keyboard:true, backdrop:true, show:true};
          $('#myModalcreate').modal(options);
      });
    </script>
    <script>
      $('#myModaledit').on('hidden.bs.modal', function () 
      {
          $(this).find('#editFosLogoorg').trigger('reset');
      });

      $('.editButton').on('click', function() 
      {
        $('#myModaledit').html('');
        var options = {keyboard:false, backdrop:true, show:true};
        $('#myModaledit').modal(options);

        var id = $(this).attr('data-id');
        var $url =  Routing.generate('foslogoorg_edit',{id:id});
        console.log($url);
        $.ajax
        ({
            url: $url,
            method: 'GET'
        })
        .success(function(response) 
        {
          $('#myModaledit').html(response);
          var options = {keyboard:true, backdrop:true, show:true};
          $('#myModaledit').modal(options);
        });
      });
    </script>
{% endblock javascripts %}
